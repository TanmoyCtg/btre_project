container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python btre_project/manage.py migrate --noinput"
    leader_only: true

  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python btre_project/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "btre.settings"
    "PYTHONPATH": "/opt/python/current/app/iotd:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: brte_project/btre/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"